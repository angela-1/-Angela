/**index.wxss**/

.container {
  background-color: #eee;
}

.header {
  width: 100%;
  background-color: white;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  z-index: 10;
}

.info {
  text-align: center;
  font-size: 32rpx;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #b2b2b2;
}

.num-input {
  font-size: 38rpx;
  padding: 20rpx 40rpx;
}

.num-input .input {
  color: #888;
}

.num-input .cursor {
  color: #685875;
}

.form-line {
  height: 100rpx;
}

.hline {
  border-bottom: 2rpx solid #b2b2b2;
}

.new-result {
  padding: 20rpx 0;
}

.new-result text {
  display: inline-block;
  margin: 0 40rpx;
}

.new-result image {
  margin: 0 40rpx;
  height: 40rpx;
  width: 40rpx;
}

.mask {
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  background-color: #888;
  z-index: 2;
  opacity: 0.5;
}

.result-list {
  min-height: 680rpx;
  margin-top: 40rpx;
  width: 100%;
}

.result-card {
  background-color: white;
  margin: 20rpx;
  padding: 10rpx 20rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
}

.result-card .re-item {
  margin: 10rpx;
  display: block;
}

.result-card .num {
  font-size: 46rpx;
  color: #353535;
}

.result-card .chn {
  color: #888;
  font-size: 34rpx;
}

.kbd {
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 8;
}

.kbd button {
  /*height: 50px;*/
  font-size: 38rpx;
}

.footer {
  margin-bottom: 20rpx;
}
