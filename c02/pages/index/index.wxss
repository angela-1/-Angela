/**index.wxss**/

.container {
  background-color: #eee;
}

.title {
  width: 100%;
  background-color: white;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  z-index: 10;
}

.caption {
  text-align: center;
  font-size: 32rpx;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #b2b2b2;
}

.row {
  font-size: 38rpx;
  padding: 20rpx 40rpx;
  height: 100rpx;
}

.row .numstr {
  color: #888;
}

.row .cursor {
  color: #685875;
}


.hline {
  border-bottom: 2rpx solid #b2b2b2;
}

.chnline {
  padding: 20rpx 0;
}

.chnline .chnstr {
  display: inline-block;
  margin: 0 40rpx;
}

.chnline .icon {
  margin: 0 40rpx;
  height: 40rpx;
  width: 40rpx;
}

.mask {
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  background-color: #888;
  z-index: 2;
  opacity: 0.5;
}

.result-list {
  min-height: 680rpx;
  margin-top: 40rpx;
  width: 100%;
}

.result-card {
  background-color: white;
  margin: 20rpx;
  padding: 10rpx 20rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
}

.result-card .result-item {
  margin: 10rpx;
  display: block;
}

.result-card .num {
  font-size: 46rpx;
  color: #353535;
}

.result-card .chn {
  color: #888;
  font-size: 34rpx;
}

.kbd {
  width: 100%;
  position: absolute;
  bottom: 5rpx;
  z-index: 6;
}

.kbd .btn {
  font-size: 45rpx;
  padding: 10rpx;
  line-height: 2;
  margin: 5rpx;
}

.footer {
  margin-bottom: 20rpx;
}
